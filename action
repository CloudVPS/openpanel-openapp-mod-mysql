#!/bin/bash
. /var/openpanel/api/sh/module.sh

MysqlAdmin.update() {
  appid=mysql
  newpass=$(coreval MysqlAdmin password)
  method=$(coreval MysqlAdmin backupmethod)
  authd runscript openapp-call "$appid" passwd "$newpass"
  authd runscript openapp-call "$appid" backupmethod "$method"
}

Module.getconfig() {
  cat << _EOF_
  <openpanel.module>
    <dict id="MysqlAdmin" type="class">
      <dict id="Admin">
	    <string id="password">*</string>
      </dict>
    </dict>
  </openpanel.module>
_EOF_
  exitquiet
}

implement OpenAppMysql.module
